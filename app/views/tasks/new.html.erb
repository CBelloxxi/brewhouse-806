<div class="container col-6 p-3">
<h1>New Task</h1>
  <%= form_for(@tasks) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= check_box_tag(:completed) %>
    <%= f.label(:completed, "Completed?") %>
    <%= f.submit %>
  <% end %>
</div>

<%= link_to 'Back to Tasks', tasks_path%>
